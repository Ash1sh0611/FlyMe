<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/flight-details.css">
    <title>Flight Details</title>
</head>
<body>
    <section id="loading" class="container-fluid">
        <img src="/assets/loading.gif" alt="Loading..." class="img-fluid" style="height: 100vh; width: 100vw;">
    </section>
    <div id="sub-container">
        <div id="header" class="header pb-5">
            <div class="row pt-4">
              <div class="col-xl-2 text-center">
                <img class="logo img-responsive" src="/assets/black-logo.png" />
              </div>
              <!-- <div class="col-lg-5 pt-2"></div> -->
              <div class="text-center col-xl-10 row">
                <div class="col-lg-5 pt-3">
                  <div class="rounded-pill border border-4 content-center">
                    <h2 id="header-from" class="p-3">Mumbai</h2>
                  </div>
                </div>
                <div class="col-lg-1 text-center pt-4">
                  <img src="/assets/duoarrow-vector.png" />
                </div>
                <div class="col-lg-5 pt-3">
                  <div class="rounded-pill border border-4 pl-4">
                    <h2 id="header-to" class="p-3">Mumbai</h2>
                  </div>
                </div>
                <div class="col-lg-4"></div>
              </div>
              <!-- <div class="col-lg-5 pt-2"></div> -->
            </div>
            <div class="container-fluid text-center row pt-4">
              <span class="col-lg-3 ">
              </span>
              <div class="col-md-8 row">
                <span class="col-md-3 rounded-pill align-middle grey p-2">
                  <h2>1 Traveller</h2>
                </span>
                <span class="col-md-1"></span>
                <span class="col-md-3 rounded-pill grey p-2 align-middle">
                  <h2 id="header-class">Economy</h2>
                </span>
                <span class="col-md-1"></span>
                <span class="col-md-3 rounded-pill grey p-2">
                  <h2 id="header-date">March 10th,2023</h2>
                </span>
              </div>
              <div class="col-md-1"> </div>
            </div>
        </div>
        <div class="content row">
            <section id="filter-options" class="col-lg-3">
                <h1 class="text-center">Filter</h1>
          <div class="grey rounded-5 mx-4">
            <form id="filter-form">
              <div class="STOP-FILTER pt-4 text-center">
                <h5 class="pb-3"><u>Stops</u></h5>
                <label for="non-stope" class="stop">
                  <input class="form-check-input" type="checkbox" onchange="formChange()" name="stops" id="non-stope" value="non-stope" />
                  <span class="pb-1">Non stop</span>
                </label>
                <br>
                <label for="1_stop" class="stop">
                  <input class="form-check-input" type="checkbox" onchange="formChange()" name="journey_type" id="1_stop" value="1_stop" />
                  <span class="pb-1">One stop</span>
                </label>
                <br>
                <label for="1+_stop" class="stop">
                  <input class="form-check-input" type="checkbox" onchange="formChange()" name="journey_type" id="1+_stop" value="1+_stop" />
                  <span class="pb-1">Multi stop</span>
                </label>
              </div>
              <div class="Price pt-4" id="price-filter">

                <h5 class="text-center"><u>Price</u></h5>

                <div class="input-group mb-3 px-3">
                  <label for="min_price" class="input-group-text">Min ₹</label>
                  <input class="form-control" type="text" accept="number" onchange="formChange()" name="min_price"
                    id="min_price" value="0">
                </div>
                <div class="input-group  mb-3 px-3">
                  <input class="form-control" type="text" accept="number" onchange="formChange()" name="max_price"
                    id="max_price">
                  <label for="max_price" class="input-group-text">Max ₹</label>
                </div>
              </div>
            </form>
            <div class="AIR-FILTER pt-4">
              <h5 class="pb-3 text-center"><u>Airline</u></h5>
              <div class="container justify-centre mx-auto">
                <label for="air-india" class="airLine">
                  <input class="form-check-input" type="radio" name="airline_type" id="air-india" value="air-india"
                     />
                  <span class="pb-1">Air India</span>
                </label>
                <br>
                <label for="air-asia" class="airLine">
                  <input class="form-check-input" type="radio" name="airline_type" id="air-asia" value="air-asia"
                     />
                  <span class="pb-1">Air Asia</span>
                </label>
                <br>
                <label for="go-first" class="airLine">
                  <input class="form-check-input" type="radio" name="airline_type" id="go-first" value="go-first"
                     />
                  <span class="pb-1">Go first</span>
                </label>
                <br>
                <label for="indigo" class="airLine">
                  <input class="form-check-input" type="radio" name="airline_type" id="indigo" value="indigo"  />
                  <span class="pb-1">Indigo</span>
                </label>
                <br>
                <label for="vistara" class="airLine">
                  <input class="form-check-input" type="radio" name="airline_type" id="vistara" value="vistara"
                  />
                  <span class="pb-1">Vistara</span>
                </label>
              </div>
            </div>
          </div>
            </section>
            <section id="onload" class="mt-2 mb-3 container-fluid col-lg-9">
                <div class="row py-3 grey rounded-5">
                    <h5 class="col">Air Line</h5>
                    <h5 class="col">Departure</h5>
                    <h5 class="col">Arrival</h5>
                    <h5 class="col">Duration</h5>
                    <h5 class="col">Price</h5>
                </div>
                <div class="container-fluid zero-count">There's nothing in here</div>
            </section>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal" id="modal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
        
              <!-- Modal Header -->
              <div class="modal-header border-0">
                <h4 class="modal-title">Your Trip Details</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
        
              <!-- Modal body -->
              <div class="modal-body">
                body...
              </div>
        
              <!-- Modal footer -->
              <div class="modal-footer border-0">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
              </div>
        
            </div>
        </div>
    </div>

